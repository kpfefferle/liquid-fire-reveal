    {{else}}
      <div class="content blue">revealLeft<br>example</div>
    {{/liquid-if}}
  </div>

  <div class="example">
    <div class="buttons">
      <button {{action 'toggleRevealRight'}}>Click to Run Transition</button>
    </div>
    {{#liquid-if revealRightRed class="reveal-right"}}
      <div class="content red">hideRight<br>example</div>
    {{else}}
      <div class="content blue">hideRight<br>example</div>
    {{/liquid-if}}
  </div>

  <div class="example">
    <div class="buttons">
      <button {{action 'toggleHideDown'}}>Click to Run Transition</button>
    </div>
    {{#liquid-if hideDownRed class="hide-down"}}
      <div class="content red">hideDown<br>example</div>
